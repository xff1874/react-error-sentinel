{
    "name": "@music/react-error-sentinel",
    "version": "0.2.6",
    "description": "react-error-sentinel is a cli which patch react error boundaries lifecycle easily",
    "main": "./lib/index.js",
    "bin": {
        "react-error-sentinel": "./lib/index.js"
    },
    "scripts": {
        "test": "jest",
        "build": "npm run transform && npm run copy",
        "transform": "npx babel src --out-dir lib --ignore 'src/templates/*/*.js'",
        "copy": "node build/copy.js"
    },
    "repository": {
        "type": "git",
        "url": "https://g.hz.netease.com/NeteaseMusicUI/react-error-sentinel.git"
    },
    "keywords": [
        "react",
        "error boundaries",
        "cli"
    ],
    "author": "zwd",
    "license": "ISC",
    "dependencies": {
        "@babel/template": "^7.4.4",
        "@babel/types": "^7.4.4",
        "chalk": "^2.4.2",
        "co": "^4.6.0",
        "co-prompt": "^1.0.0",
        "commander": "^2.20.0",
        "compare-versions": "^3.4.0",
        "eslint-plugin-jest": "^22.15.0",
        "fs-extra": "^8.0.1",
        "html-tags": "^3.0.0",
        "inquirer": "^6.5.0",
        "react": "16.8.6",
        "react-dom": "^16.8.6",
        "readdir": "^0.1.0",
        "semver": "^6.1.1",
        "shelljs": "^0.8.3",
        "yargs": "^13.3.0"
    },
    "devDependencies": {
        "@babel/cli": "^7.5.5",
        "@babel/core": "^7.4.5",
        "@babel/node": "^7.4.5",
        "@babel/plugin-proposal-class-properties": "^7.4.4",
        "@babel/plugin-syntax-dynamic-import": "^7.2.0",
        "@babel/plugin-transform-arrow-functions": "^7.2.0",
        "@babel/preset-env": "^7.5.5",
        "@babel/preset-react": "^7.0.0",
        "@commitlint/cli": "^8.0.0",
        "@commitlint/config-conventional": "^8.0.0",
        "@music/eslint-config-bass": "^1.4.4",
        "babel-eslint": "^10.0.2",
        "babel-loader": "^8.0.6",
        "eslint": "^5.16.0",
        "eslint-config-prettier": "^5.0.0",
        "eslint-plugin-import": "^2.17.3",
        "eslint-plugin-react": "^7.13.0",
        "husky": "^2.4.1",
        "jest": "^24.8.0",
        "lint-staged": "^13.1.0",
        "prettier": "^1.18.2"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged",
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
        }
    },
    "lint-staged": {
        "*.{js,jsx}": [
            "prettier --write",
            "eslint --fix",
            "git add"
        ],
        "*.{json,css,less,md}": [
            "prettier --write",
            "git add"
        ],
        "ignore": [
            "**/lib/*.js"
        ]
    },
    "jest": {
        "testEnvironment": "node",
        "roots": [
            "test"
        ],
        "collectCoverage": true,
        "collectCoverageFrom": [
            "!**/example/**",
            "!**/fixtures/**"
        ]
    }
}
